<html>
<head>
    <title>{{title}}</title>
</head>
<body>
    <h1>{{title}}</h1>

    <button onclick="showRandomNumber()">Generate random numbers</button>
    <div>
        Number generated by GET:
        <div id="random_number_by_get"></div>
    </div>
    <div>
        Number generated by POST:
        <div id="random_number_by_post"></div>
    </div>

    <script>
    async function showRandomNumberByGet() {
        const response = await fetch('/api/random-number');
        const json = await response.json();
        const parsedJson = JSON.parse(JSON.stringify(json));
        document.getElementById('random_number_by_get').innerHTML = parsedJson['randomNumber'];
    }

    async function showRandomNumberByPost() {
        const response = await fetch('/api/random-number', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: '{ "max": 6 }'
        });
        const json = await response.json();
        const parsedJson = JSON.parse(JSON.stringify(json));
        document.getElementById('random_number_by_post').innerHTML = parsedJson['randomNumber'];
    }

    async function showRandomNumber() {
        showRandomNumberByGet();
        showRandomNumberByPost();
    }
    </script>
</body>
</html>
