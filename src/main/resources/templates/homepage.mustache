<html>
<head>
    <title>{{title}}</title>
</head>
<body>
    <h1>{{title}}</h1>

    <button onclick="showRandomNumber()">Generate random number</button>
    <div id="random_number_container"></div>

    <script>
    async function showRandomNumber() {
        const response = await fetch('/api/random-number');
        const json = await response.json();
        const parsedJson = JSON.parse(JSON.stringify(json));
        document.getElementById('random_number_container').innerHTML = parsedJson['randomNumber'];
    }
    </script>
</body>
</html>
